
<%= form_for recipe do |f| %>
  <div>
    <%= f.label "圖片" %>
    <%= image_tag recipe.image.thumb.url if recipe.image? %>
      <label class="btn btn-info" style="width: 50px; height: 50px;">
        <%= f.file_field :image, class: "d-none" %>
      </label>
  </div>
  <div>
    <%= f.label "名稱" %>
    <%= f.text_field :name %>
  </div>
  <div>
    <%= f.label "簡介" %>
    <%= f.text_field :description %>
  </div>
  <div>
    <%= f.label "所需時間" %>
    <%= f.text_field :time %>
  </div>
  <div>
    <%= f.label "份量" %>
    <%= f.text_field :quantity %>
  </div>
  <%= f.submit "建立", value: "Submit" %>
<% end %>    
